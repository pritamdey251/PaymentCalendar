<resources>


    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.

        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="weekdayName">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ff000000</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="weekendName">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#64569F</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="todayDateText">
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="todayDateBackground">
        <item name="android:textColor">#64569F</item>
    </style>

    <style name="selectedDateText">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="selectedDateBackground">
        <item name="android:textColor">#808080</item>
    </style>

    <style name="unSelectedWeekDateText">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="unSelectedWeekDateBackground">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="unSelectedWeekEndDateText">
        <item name="android:textColor">#64569F</item>
    </style>

    <style name="unSelectedWeekEndDateBackground">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="outOfScopeDateText">
        <item name="android:textColor">#808080</item>
    </style>

    <style name="outOfScopeDateBackground">
        <item name="android:textColor">#FFFFFF</item>
    </style>



</resources>